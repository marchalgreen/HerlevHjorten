{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "ES2019", "ES2018", "ES2017", "ES2016", "ES2015", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client", "node"],
    "allowImportingTsExtensions": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@rundeklar/common": ["../common/dist/index.d.ts", "../common/src/index.ts"],
      "@rundeklar/webapp/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src", "vite.config.ts", "tailwind.config.ts", "postcss.config.cjs"],
  "exclude": ["scripts"]
}
